<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/historic_pen_color"
    android:layout_width="@dimen/fab_button_normal_size"
    android:layout_height="@dimen/fab_button_normal_size">

                <ImageView
                    android:id="@+id/historic_pen_imageView"
                    android:layout_width="@dimen/fab_button_normal_size"
                    android:layout_height="@dimen/fab_button_normal_size"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_pen"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/delete_historic_pen"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_delete"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" />

</RelativeLayout>